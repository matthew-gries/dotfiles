{
    // ==========================================================================
    // Workbench & UI
    // ==========================================================================
    "workbench.colorTheme": "Gruvbox Material Dark",
    "workbench.editor.enablePreview": false,
    "workbench.editor.showTabs": "multiple",
    "window.restoreWindows": "all",
    // ==========================================================================
    // Editor - General
    // ==========================================================================
    "editor.lineNumbers": "on",
    "editor.cursorSurroundingLines": 10, // Matches neovim scrolloff
    "editor.cursorBlinking": "solid",
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "trailing",
    "editor.suggestSelection": "first",
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": "active",
    // Font
    "editor.fontFamily": "'GohuFont 14 Nerd Font', Menlo, Monaco, 'Courier New', monospace",
    "editor.fontSize": 14,
    "editor.fontLigatures": true,
    // Indentation (default: 4 spaces, matches neovim)
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    // ==========================================================================
    // Editor - Language-Specific Formatting
    // ==========================================================================
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 2
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 2
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 2
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 2
    },
    // ==========================================================================
    // Search & Navigation
    // ==========================================================================
    "search.smartCase": true,
    "diffEditor.ignoreTrimWhitespace": false,
    // ==========================================================================
    // Files & Workspace
    // ==========================================================================
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "security.workspace.trust.untrustedFiles": "open",
    // ==========================================================================
    // Terminal
    // ==========================================================================
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.fontFamily": "'GohuFont 14 Nerd Font'",
    "terminal.integrated.inheritEnv": false,
    // ==========================================================================
    // Extension-Specific Settings
    // ==========================================================================
    // TypeScript/JavaScript
    "typescript.updateImportsOnFileMove.enabled": "always",
    "javascript.updateImportsOnFileMove.enabled": "always",
    // CMake
    "cmake.configureOnOpen": true,
    // Red Hat (disable telemetry)
    "redhat.telemetry.enabled": false,
    // GitHub Copilot Chat
    "chat.agent.enabled": false,
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "claudeCode.useTerminal": true,
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "vscode-neovim.neovimInitVimPaths.linux": "/home/matt/.config/nvim/init.lua",
    "python.createEnvironment.trigger": "off"
}

